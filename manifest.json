{
  "manifest_version": 3,
  "name": "Bookmark Manager Zero",
  "version": "1.0",
  "description": "A modern interface for the native Firefox bookmark manager.",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "sidebar_action": {
    "default_title": "Bookmark Manager Zero",
    "default_panel": "sidebar.html",
    "default_icon": {
      "48": "icons/bookmark-48.png",
      "96": "icons/bookmark-96.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/bookmark-48.png",
    "96": "icons/bookmark-96.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https:;"
  }
}